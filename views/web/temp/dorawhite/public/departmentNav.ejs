<link rel="stylesheet" href="/themes/<%=staticforder%>/css/department_nav.css?vesion=<%=siteConfig.version%>">

<div class="department-nav">
	<div class="container">
		<h3 class="title">科室一览</h3>

		<div class="row whole-departments">
			<div class="left col-md-5 col-sm-12">
				<div class="img-wrap">
					<img src="<%=cdnfolder%>/news3.jpg" alt="">
				</div>
			</div>
			<div class="right col-md-7 col-sm-12">
				<div class="nav-line">
					<ul class="row">
						<li class="col-md-3 col-sm-3 col-xs-3"><a data-target="expert" class="nav-btn active" href="javascript:;">专家门诊<i></i></a></li>
						<li class="col-md-3 col-sm-3 col-xs-3"><a data-target="clinical" style="background: #55a5aa;" class="nav-btn" href="javascript:;">临床科室<i style="border-top: 13px solid#55a5aa;"></i></a></li>
						<li class="col-md-3 col-sm-3 col-xs-3"><a data-target="skill" style="background: #e5ca8f;" class="nav-btn" href="javascript:;">医技科室<i style="border-top: 13px solid #e5ca8f;"></i></a></li>
						<li class="col-md-3 col-sm-3 col-xs-3"><a style="background: #01763a;" class="nav-btn" href="/departments">更多科室</a></li>
					</ul>
				</div>
				<div class="department-line">
					<div class="department-group expert active">
						<ul class="row">
							<%if (expertInfos.length > 0) {%>
								<% expertInfos.forEach(function(info){ %>
									<li class="expert-info">
										<a target="<%= info.originUrl ? '_blank' : '_self'%>" 
										   href="<%= info.originUrl || '/details/' + info._id + '.html' %>">
											<%=info.title%>
											<span class="fr"><%=info.dateSeted%></span>
										</a>
									</li>
								<% }) %>
							<%}else{%>
								<p>暂无信息</p>
							<%}%>
						</ul>
					</div>
					<div class="department-group clinical">
						<ul class="row">
							<%if (clinicDeps.length > 0) {%>
								<% clinicDeps.forEach(function(dep){ %>
									<li class="department col-md-3 col-sm-3 col-xs-3">
										<a href="/department/<%=dep._id%>" class="link ellipsis"><%=dep.department%></a>
									</li>
								<% }) %>
							<%}%>
						</ul>
					</div>
					<div class="department-group skill">
						<ul class="row">
							<%if (techDeps.length > 0) {%>
								<% techDeps.forEach(function(dep){ %>
									<li class="department col-md-3 col-sm-3 col-xs-3">
										<a href="/department/<%=dep._id%>" class="link ellipsis"><%=dep.department%></a>
									</li>
								<% }) %>
							<%}%>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row special-departments">
	<div class="col-md-4 col-sm-12 col-xs-12">
		<div class="special">
			<a target="_blank" href="https://mp.weixin.qq.com/s/P-WhEpyNjxl-IgTtH7OZaw">
				<img src="<%=cdnfolder%>/chinese_med.jpg" alt="">
			</a>
		</div>
	</div>
	<div class="col-md-4 col-sm-12 col-xs-12">
