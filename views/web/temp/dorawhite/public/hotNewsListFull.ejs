<div class="hotNewsListFull">
    <h3>通知公告</h3>
    <ul>
        <%if(noticeNews.length>0){%>
            <%noticeNews.forEach(function(item){%>
                <li>
                    <div class="row">
                        <p class="newsTitle"><a href="/details/<%=item._id%>.html" target="_blank"><%=item.title%></a></p>
                        <p class="hotItemDate hidden-xs"><%=item.dateSeted%></p>    
                    </div>
                </li>
            <%})%>
        <%}else{%>
            <li class="text-center">暂无内容...</li>
        <%}%>
    </ul>
</div>