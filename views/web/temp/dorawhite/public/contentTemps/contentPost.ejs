<div class="content-post-wrap col-xs-12 col-sm-6 col-md-6 col-lg-4">
    <div class="content-post">
        <div class="img-wrap">
            <a title="<%=item.title%>" href="/details/<%=item._id%>.html">
                <img class="img-responsive" alt="<%=item.title%>" src="<%=item.sImg%>">
            </a>
        </div>
        <div class="text-wrap">
            <a class="title ellipsis" alt="<%=item.title%>" title="<%=item.title%>" href="/details/<%=item._id%>.html">
                <%=item.title%>
            </a>
            <p class="intro">
                <%=item.description.slice(0,70)%>
                <%=item.description.length > 70 ? '......' : ''%>
            </p>
        </div>
    </div>
</div>
