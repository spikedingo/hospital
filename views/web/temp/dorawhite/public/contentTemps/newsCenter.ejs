<div class="content-list-wrap">
    <div class="hospital-news container">
        <h5 class="position">您现在的位置：<a href="/">首页</a> > <a href="">文章中心</a> > <a href=""><%=categoryDetail[0].name%></a></h5>

        <div class="page-intro">
            <h2>
                <%=categoryDetail[0].name%>
            </h2>
            <h4>
                <%=categoryDetail[0].comments%>
            </h4>
        </div>

        <div class="row areaPicNews">
            <% if(contentLists.length>0){ %>
            <% contentLists.forEach(function(item){ %>
                    <% if(item.state){ %>
                    <% include contentPost %>
                    <%}%>
                <% }) %>
            <% }else{ %>
                <li class="text-center">暂无推荐内容...</li>
            <% } %>

        </div>
    </div>
    <% include ../pagination %>
</div>
