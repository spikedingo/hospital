<!--文章推荐模块-->
<div class="row recommend-list-wrap">
    <h4>推荐阅读:</h4>

    <%if(reCommendListData.length>0){%>
        <%reCommendListData.forEach(function(item){%>
        <div class="single-content col-xs-12 col-sm-6 col-md-6 col-lg-3">
            <a title="<%=item.title%>" href="/details/<%=item._id%>.html">
                <img class="img-responsive" alt="<%=item.title%>" src="<%=item.sImg%>">
            </a>
            <h5>
                <a title="<%=item.title%>" href="/details/<%=item._id%>.html">
                    <%=item.title%>
                </a>
            </h5>
        </div>
        <%})%>
    <%}else{%>
    <li class="text-center">暂无推荐内容...</li>
    <%}%>
</div>