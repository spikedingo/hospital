
<link href="/themes/<%=staticforder%>/css/guides.css?vesion=<%=siteConfig.version%>" rel="stylesheet">
<link rel="stylesheet" href="/themes/<%=staticforder%>/css/doctors.css?vesion=<%=siteConfig.version%>">
<div class="guides-wrap">
    <div class="container">
        <h5 class="position">您现在的位置：<a href="/">首页</a> > <a href="">医生介绍</a></h5>

        <h2 class="page-intro t-center">
            医生介绍
        </h2>

        <div class="guides-type-wrap">
            <div class="sections-wrap doctors-sections active tips">
                <div class="row">
                    <div class="left-section col-md-3 col-sm-3 col-xs-12">
                        <div class="lists department-lists box-shadow pd20">
                            <ul class="row">
                                <%if (clinicDeps.length > 0) {%>
                                    <% clinicDeps.forEach(function(dep){ %>
                                        <% if (department == dep.department) {%>
                                        <li class="single-list single-dep active col-sm-6 col-xs-6">
                                            <a href="/doctors/<%=dep.department%>" class="link ellipsis"><%=dep.department%></a>
                                        </li>
                                        <%} else {%>
                                        <li class="single-list single-dep col-sm-6 col-xs-6">
                                            <a href="/doctors/<%=dep.department%>" class="link ellipsis"><%=dep.department%></a>
                                        </li>
                                        <%}%>
                                    <% }) %>
                                <%}%>
                            </ul>


                            <ul class="row">
                                <%if (techDeps.length > 0) {%>
                                    <% techDeps.forEach(function(dep){ %>
                                        <li class="single-list single-dep  col-sm-6 col-xs-6">
                                            <a href="/doctors/<%=dep.department%>" class="link ellipsis"><%=dep.department%></a>
                                        </li>
                                    <% }) %>
                                <%}%>
                            </ul>
                        </div>
                    </div>
                    <div class="right-section doctor-lists box-shadow pd40 col-md-9 col-sm-9 col-xs-12">

                        <%doctors.forEach(function(doctor){%>
                            <div data-description="<%=doctor.description%>"
                                 data-department="<%=doctor.department%>"
                                 data-doctor="<%=doctor.doctor%>"
                                 data-professional="<%=doctor.professional%>"
                                 data-simg="<%=doctor.sImg%>" 
                                 class="single-doctor col-md-4 col-sm-6 col-xs-12">
                                <a href="javascript:;">
                                <div class="rImgDoc">
                                    <span class="mask">
                                        <p class="name"><%=doctor.doctor%></p>
                                        <p class="intro"><%=doctor.professional.split(',').join(' ')%></p>
                                    </span>
                                    <img src="<%=doctor.sImg%>" alt="">
                                </div>
                                </a>
                            </div>
                        <%})%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

