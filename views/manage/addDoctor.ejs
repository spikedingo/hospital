<div class="row" ng-controller="addDoctor">
    <div class="col-xs-12">
        <div class="box box-default form-input-wrap">
            <div class="box-header">
                <div class="alert alert-success alert-dismissable fade in hide" role="alert" id="addSuccess">
                    <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                    <p><i class="icon fa fa-check"></i> <strong>恭喜！</strong>添加医生成功</p>
                </div>
                <p class="myInfoBox bg-warning text-warning"><i class="icon fa fa-warning"></i> 信息填写完整无误才可提交</p>
            </div>
            <div class="box-body">
                <form role="form" class="form-horizontal" name="myForm" ng-submit="processForm(myForm.$valid)" novalidate>
                    <div class="form-group">
                        <label class="control-label">医生姓名</label>
                        <div class="input-area">
                            <input type="text" class="form-control input-sm" name="doctor" ng-minlength="2" ng-maxlength="10" ng-model="formData.doctor" required/>
                            <label for="inputError" class="err-label control-label text-danger" ng-show="myForm.doctor.$invalid && !myForm.doctor.$pristine"><i class="fa fa-times-circle-o"></i> 2-10个非特殊字符</label>
                            <span class="must">*</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">显示排序</label>
                        <div class="input-area clearfix">
                            <input type="text" class="form-control input-sm" name="sort"  ng-model="formData.sort" required/>
                            <span class="must">*</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">所属科室</label>
                        <div class="radio input-area clearfix">
                            <select id="department-type" name="department" ng-model="formData.department">
                                <option value="0">选择科室</option>
                            </select>
                            <span class="must">*</span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label">专业特长</label>
                        <div class="input-area clearfix tag-input-wrap">
                            <div class="tag-input clearfix professional">
                                <input type="text" class="form-control normal-input-form" name="tags" ng-minlength="2" ng-maxlength="27" ng-model="formData.professional" placeholder="输入文字后按空格或回车添加" />
                            </div>
                            <span class="must">*</span>
                            <ul class="value-container clearfix">
                            </ul>
                            <label for="inputError" class="err-label control-label err-label text-danger" ng-show="myForm.tags.$invalid && !myForm.tags.$pristine"><i class="fa fa-times-circle-o"></i>子科室名字不可超过6个字</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">医生照片</label>
                        <div class="input-area clearfix">
                            <div name="uploadify" id="uploadDoctorImg"></div>
                            <img style="width: 150px;" src="" alt="" width="120" height="120" class="img-thumbnail doctor-img" id="myImg">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">医生简介</label>
                        <div class="input-area">
                            <textarea class="form-control" name="description" ng-model="formData.description" id="container" ng-minlength="2" placeholder="请输入医生简介" rows="8" cols="50">{{formData.description}}</textarea>
                        </div>
                        <span class="must">*</span>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" ng-disabled="myForm.$invalid">发布</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

