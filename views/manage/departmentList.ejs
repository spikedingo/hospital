                        <!-- <th>来源</th> -->
                        <!-- <th>类型</th> -->
                        <!-- <th>推荐</th> -->
                        <!-- <th>点击</th> -->
                        <!-- <th>显示</th> -->
                        <th>科室负责人</th>
                        <th>操作</th>
                    </tr>
                    <tr class="datalist" ng-repeat="departments in data">
                        <td><input type="checkbox" name="listItem" class="mini" value="{{departments._id}}" ng-click="getNewIds()"/></td>

                        <!-- <td ng-switch on="content.type"> -->
                        <td ng-switch on="departments.type">
                            <span ng-switch-default>{{departments.department}}</span>
                        </td>
                        <td>{{departments.updateDate | date : "yyyy-MM-dd"}}</td>
                        <!-- <td>{{content.category.name}}</td> -->
                        <!-- <td ng-switch on="content.from">
                            <span ng-switch-when="1">原创</span>
                            <span ng-switch-when="2">转载</span>
                        </td> -->
                        <!-- <td ng-switch on="content.type">
                            <span ng-switch-when="content">文档</span>
                            <span ng-switch-when="plug">插件</span>
                            <span ng-switch-when="singer">其它</span>
                        </td> -->
                        <!-- <td ng-class="{true:'text-danger'}[content.isTop==1]"><i class="fa fa-fw fa-flag"></i></td> -->
